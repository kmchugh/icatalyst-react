{
  "name": "@icatalyst/core",
  "version": "0.0.1",
  "description": "core elements for the @icatalyst/react mvp framework",
  "author": "ICatalyst Pte. Ltd.",
  "homepage": "https://github.com/kmchugh/icatalyst-react#readme",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmchugh/icatalyst-react.git"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf tsconfig.tsbuildinfo",
    "prepack": "yarn build",
    "build": "yarn clean && yarn compile",
    "compile": "tsc --build && cp \"./package.json\" ./lib/",
    "dev": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"./src/**/*.{ts,tsx}\" --max-warnings=0"
  },
  "bugs": {
    "url": "https://github.com/kmchugh/icatalyst-react/issues"
  },
  "publishConfig": {
    "access": "public",
    "directory": "lib"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/build",
          "{projectRoot}/public/build"
        ]
      }
    }
  },
  "devDependencies": {
    "@ctrl/tinycolor": "^3.4.1",
    "history": "^5.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  }
}