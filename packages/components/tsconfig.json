{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "./src",
        "outDir": "lib",
        // https://create-react-app.dev/docs/importing-a-component/#absolute-imports
        "baseUrl": "./src",
    },
    "references": [
        {
            "path": "../core"
        }
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.stories.*",
    ]
}