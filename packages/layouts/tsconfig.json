{
    "compilerOptions": {
        "outDir": "lib",
        "module": "esnext",
        "target": "esnext",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        // https://create-react-app.dev/docs/importing-a-component/#absolute-imports
        "baseUrl": "src"
    },
    "include": [
        "src",
        "../components/src/static-init.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.stories.*",
    ]
}